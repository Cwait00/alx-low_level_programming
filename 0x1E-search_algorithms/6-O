#include "search_algos.h"

/**
 * allocate_map - Allocates memory for a 2D array of integers
 * @n: Number of rows
 * @m: Number of columns
 *
 * Description:
 *   This function allocates memory for a 2D array of integers with n rows
 *   and m columns.
 *
 * Return:
 *   - On success, returns a pointer to the allocated 2D array.
 *   - On failure, returns NULL.
 */
int **allocate_map(int n, int m)
{
	int **map;

	map = malloc(sizeof(int *) * n);
	for (int i = 0; i < n; i++)
	{
	map[i] = malloc(sizeof(int) * m);
	}
	return map;
}
